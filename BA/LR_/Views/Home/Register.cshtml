@{
ViewData["Title"] = "Home Page";
}
@model LR_.Models.User
<nav >
    <h1 > Register</h1>
    <h4><a style="color: blue;" href="/Login">Already Rigstered? </a></h4>
</nav>
<div >
    <form asp-action="Register" asp-controller="Home" method="POST" >
        <div >
            <span asp-validation-for="FirstName"></span>
            <label asp-for="FirstName"></label>
            <input type="text" asp-for='FirstName' >
        </div>
        <div>
            <span asp-validation-for="LastName"></span>
            <label asp-for="LastName"></label>
            <input type="text" asp-for='LastName' >
        </div>
        <div >
            <span asp-validation-for="Email"></span>
            <label asp-for="Email"></label>
            <input type="text" asp-for='Email'>
        </div>
        <div >
            <span asp-validation-for="Password"></span>
            <label asp-for="Password"></label>
            <input type="Password" asp-for='Password' >
        </div>
        <div >
            <span asp-validation-for="Confirm"></span>
            <label asp-for="Confirm"></label>
            <input type="Password" asp-for='Confirm' >
        </div>
        <button type="submit" value='submit' >Submit</button>
    </form>
</div>